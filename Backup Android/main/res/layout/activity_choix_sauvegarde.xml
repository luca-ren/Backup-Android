<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app=" "
xmlns:app2="http://schemas.android.com/apk/res-auto"
xmlns:app3=" "
xmlns:app4=" "
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/choixsauvegarde"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#0d47a1"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.sly.backupandroid.ChoixSauvegarde">

<CheckBox
    android:text="CONTACTS"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:background="@color/colorAccent"
    android:id="@+id/checkBox3"
    android:textSize="24sp"
    android:textStyle="normal|bold"
    android:button="@android:drawable/btn_star_big_on"
    tools:ignore="HardcodedText"
    android:textColor="#FFFFFF"
    android:fontFamily="serif"
    android:layout_below="@+id/checkBox2"
    android:layout_alignParentStart="true"
    android:layout_marginTop="56dp"
    android:layout_alignParentEnd="true" />

<CheckBox
    android:text="JOURNAL D'APPELS"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:background="@color/colorAccent"
    android:id="@+id/checkBox4"
    android:textStyle="normal|bold"
    android:textSize="24sp"
    android:button="@android:drawable/stat_sys_vp_phone_call"
    tools:ignore="HardcodedText"
    android:textColor="#FFFFFF"
    android:fontFamily="serif"
    style="@style/Widget.AppCompat.CompoundButton.CheckBox"
    android:layout_marginTop="54dp"
    android:layout_below="@+id/checkBox3"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true" />

<CheckBox
    android:text="MESSAGES"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/checkBox2"
    android:background="@color/colorAccent"
    android:button="@android:drawable/sym_action_email"
    tools:ignore="HardcodedText"
    style="@android:style/Widget.Holo.Light.CompoundButton.CheckBox"
    android:duplicateParentState="false"
    android:textSize="24sp"
    android:textColor="#FFFFFF"
    android:layout_marginTop="21dp"
    android:fontFamily="serif"
    android:textStyle="normal|bold"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:checked="true" />

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/checkBox12"
    android:button="@android:drawable/checkbox_off_background"
    android:layout_alignBaseline="@+id/checkBox4"
    android:layout_alignBottom="@+id/checkBox4"
    android:layout_alignStart="@+id/checkBox" />

<CheckBox
    android:text=""
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:id="@+id/checkBox"
    android:button="@android:drawable/checkbox_off_background"
    android:checked="true"
    android:layout_marginEnd="30dp"
    android:layout_alignTop="@+id/checkBox3"
    android:layout_alignParentEnd="true" />

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/checkBox10"
    android:button="@android:drawable/checkbox_off_background"
    android:layout_alignBaseline="@+id/checkBox2"
    android:layout_alignBottom="@+id/checkBox2"
    android:layout_alignStart="@+id/checkBox"
    android:checked="true" />

</RelativeLayout>
